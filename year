<body>

    <div class="container">
        <h1>Calculadora de Idade</h1>
        
        <div id="error" class="error"></div>

        <div class="input-group">
            <input type="text" id="nome" placeholder="Seu nome" />
            <input type="number" id="ano" placeholder="Ano de nascimento" min="1900" max="2100" />
            <input type="number" id="mes" placeholder="M√™s de nascimento (1-12)" min="1" max="12" />
            <input type="number" id="dia" placeholder="Dia de nascimento" min="1" />
            <button onclick="calcularIdade()">Confirmar</button>
        </div>

        <div id="resultado" class="resultado"></div>
        <div id="easter-eggs" class="easter-eggs">
            <div class="gif-container">
                <img src="https://media.giphy.com/media/3o6MbrjMfYka0SoP5u/giphy.gif" alt="GIF de Rea√ß√£o Fofa 1" />
                <img src="https://media.giphy.com/media/3o6ZsX4K2mYp6U6Te8/giphy.gif" alt="GIF de Rea√ß√£o Fofa 2" />
                <img src="https://media.giphy.com/media/3o6Zt6xRLgXW3s0g2E/giphy.gif" alt="GIF de Feliz Anivers√°rio 1" />
                <img src="https://media.giphy.com/media/8vQS6p8zK9APG/giphy.gif" alt="GIF de Feliz Anivers√°rio 2" />
            </div>
